# =============================================
# HR PORTAL - ENVIRONMENT CONFIGURATION
# =============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# =============================================
# DATABASE
# =============================================
# PostgreSQL connection string
# For Railway: Use the DATABASE_URL from Railway dashboard
# For local: postgresql://user:password@localhost:5432/hr_portal
DATABASE_URL="postgresql://user:password@localhost:5432/hr_portal?schema=public"

# Optional: Override connection pool settings
# DATABASE_CONNECTION_LIMIT=10

# =============================================
# AUTHENTICATION (NextAuth.js)
# =============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"

# Base URL of your application
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# =============================================
# GOOGLE OAUTH (for SSO login)
# =============================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# =============================================
# GOOGLE WORKSPACE SYNC (Admin SDK)
# =============================================
# Service account for Google Workspace Directory sync
# Create at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Enable Admin SDK API and Domain-wide Delegation
GOOGLE_SERVICE_ACCOUNT_EMAIL=""
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=""
GOOGLE_ADMIN_EMAIL=""

# =============================================
# EMAIL (SMTP)
# =============================================
# For Magic Link authentication and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="HR Portal <noreply@your-domain.com>"

# =============================================
# APPLICATION
# =============================================
# Application name displayed in UI
APP_NAME="HR Portal"

# Default timezone for date displays
TZ="UTC"

# =============================================
# SECURITY
# =============================================
# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX="100"

# Session duration in seconds (default: 7 days)
SESSION_MAX_AGE="604800"

# =============================================
# INTEGRATIONS (Optional)
# =============================================
# Mattermost webhook for notifications
MATTERMOST_WEBHOOK_URL=""

# Jira integration
JIRA_BASE_URL=""
JIRA_API_TOKEN=""
JIRA_USER_EMAIL=""

# =============================================
# MONITORING (Optional)
# =============================================
# Sentry for error tracking
SENTRY_DSN=""

# =============================================
# DEVELOPMENT
# =============================================
# Enable debug logging
DEBUG="false"

# Analyze bundle size: npm run build
ANALYZE="false"

# =============================================
# RAILWAY DEPLOYMENT
# =============================================
# These are automatically set by Railway:
# PORT - HTTP port (usually 3000)
# RAILWAY_ENVIRONMENT - production/staging
# RAILWAY_GIT_COMMIT_SHA - Current commit
